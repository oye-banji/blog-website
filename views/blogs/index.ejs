<html lang="en">
<%- include('../partials/head.ejs') %>

<body>    
    <%- include('../partials/nav.ejs') %>
    <style>
        .only{
            color: aqua;
            font-size: 25px;
            text-align: center;
        }
    </style>


    <div class="blogs content">
        <h2>All blogs</h2>
        <% if(blogs.length > 0) {%>

            <% blogs.forEach(blog => { %>
                <a class="single" href="/blogs/<%= blog._id %>">
                    <h3 class="title"><%= blog.title %></h3>
                    <p class="snippet"><%= blog.snippet %></p>
                </a>
            <% }) %>

        <% } else{%>

                <p class="only"> No Blogs To Display. </p>
                <p class="only"> Be The First To Blog.</p>

        <% } %>
    </div>

    <%- include('../partials/footer.ejs') %>

    
</body>
</html>